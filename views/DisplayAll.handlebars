<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>News Scrapper</h1>
        </div>
    </div>
    <div class="row">
        {{#each articles}}
        <div class="col-sm-6">
            <div class="row">
                <h3>{{this.title}}</h3>
            <p>{{this.summery}}</p>
            <a href={{this.link}}>Read more</a>
            </div>
            <div class="row">
                <form action="/comment" method="post">
                <input type="text" name="comment" id="comment">
                <input type="submit" value="submit">
                </form>
            </div>
            {{#each this.comment}}
                <div class="row">
                    <p>{{this.text}}</p>
                </div>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>